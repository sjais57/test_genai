#!/bin/bash

# Usage: ldapgroup groupname [-e email@example.com]

GROUP_NAME=$1
shift

EMAIL=""
while getopts "e:" opt; do
  case $opt in
    e) EMAIL="$OPTARG"
    ;;
  esac
done

# --- CONFIGURATION SECTION ---
LDAP_SERVER="ldap://your.ldap.server"
BIND_DN="cn=admin,dc=example,dc=com"
BIND_PWD="your_password"
BASE_DN="ou=Groups,dc=example,dc=com"
# -----------------------------

TMP_FILE="/tmp/ldapgroup_output_$$.csv"
> "$TMP_FILE"

ldapsearch -LLL -x -H "$LDAP_SERVER" -D "$BIND_DN" -w "$BIND_PWD" -b "$BASE_DN" "(cn=$GROUP_NAME)" member |
grep "^member" |
while read -r line; do
    # Extract the full member entry
    full_entry=$(echo "$line" | sed 's/^member: //')

    # Process names in format "CN=Sharma\, Arti Kumari Devi test123"
    # 1. Extract last name (before backslash)
    last_name=$(echo "$full_entry" | awk -F'CN=' '{print $2}' | awk -F'\\\\,' '{print $1}')
    
    # 2. Extract everything between comma and last space (first + middle names)
    first_part=$(echo "$full_entry" | sed -n 's/.*\\, \(.*\) [^ ]*$/\1/p')
    
    # 3. Extract user ID (last word)
    user_id=$(echo "$full_entry" | awk '{print $NF}')

    # Combine first+middle names with last name
    if [ -n "$first_part" ] && [ -n "$last_name" ]; then
        formatted_name="$first_part $last_name, $user_id"
        echo "$formatted_name" >> "$TMP_FILE"
    fi
done

# Sort the output alphabetically
sort -o "$TMP_FILE" "$TMP_FILE"

# Output to terminal
column -t -s ',' "$TMP_FILE" | awk '{printf "%-40s %s\n", $0, ""}'  # Format as columns

# Email if requested
if [ -n "$EMAIL" ]; then
    mail -s "LDAP Group Member Report: $GROUP_NAME" "$EMAIL" < "$TMP_FILE"
    echo "Report sent to $EMAIL"
fi

# Cleanup
rm -f "$TMP_FILE"

======================

awk -F'[=,] *' '{gsub(/\\/,"",$2); n=split($3,a," "); for(i=1;i<n;i++) printf("%s ",a[i]); printf("%s, %s\n",$2,a[n])}'

